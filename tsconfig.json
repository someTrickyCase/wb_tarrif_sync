{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/application/*": ["src/application/*"],
      "@/domain/*": ["src/domain/*"],
      "@/infrastructure/*": ["src/infrastructure/*"],
      "@/shared/*": ["src/shared/*"],
      "@/config/*": ["src/config/*"]
    },
    "target": "es2016",                                 
    "lib": ["es6","dom"],                               
    "module": "commonjs",                               
    "rootDir": "src",                                   
    "resolveJsonModule": true,                          
    "outDir": "build",                                  
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "noImplicitAny": true,                            
    "strictNullChecks": true,                        
    "strictFunctionTypes": true,                     
    "noUnusedLocals": true,                          
    "noUnusedParameters": true,                      
    "skipLibCheck": true                             
  }
}
